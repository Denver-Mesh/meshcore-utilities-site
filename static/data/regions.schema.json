{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$comment": "https://github.com/nwithan8/unraid_templates",
  "title": "Stations Data Schema",
  "additionalProperties": true,
  "definitions": {
    "emptyString": {
      "id": "#/definitions/emptyString",
      "type": "string",
      "pattern": "^$"
    },
    "nullableString": {
      "id": "#/definitions/nullableString",
      "oneOf": [
        {
          "type": "string",
          "minLength": 1
        },
        {
          "$ref": "#/definitions/emptyString"
        },
        {
          "type": "null"
        }
      ]
    },
    "threeCharCode": {
      "id": "#/definitions/threeCharCode",
      "type": "string",
      "minLength": 0,
      "maxLength": 3
    },
    "sevenCharCode": {
      "id": "#/definitions/sevenCharCode",
      "type": "string",
      "minLength": 1,
      "maxLength": 7
    },
    "fourteenthCharCode": {
      "id": "#/definitions/fourteenthCharCode",
      "type": "string",
      "minLength": 1,
      "maxLength": 14
    },
    "cityName": {
      "id": "#/definitions/cityName",
      "type": "string",
      "minLength": 1
    },
    "city": {
      "id": "#/definitions/city",
      "type": "object",
      "properties": {
        "name": {
          "$ref": "#/definitions/cityName"
        },
        "codes": {
          "type": "object",
          "properties": {
            "three": {
              "$ref": "#/definitions/threeCharCode"
            },
            "seven": {
              "$ref": "#/definitions/sevenCharCode"
            },
            "fourteen": {
              "$ref": "#/definitions/fourteenthCharCode"
            }
          },
          "required": [
            "three",
            "seven",
            "fourteen"
          ]
        }
      },
      "required": [
        "name",
        "codes"
      ]
    }
  },
  "description": "Region details",
  "type": "object",
  "properties": {
    "cities": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/city"
      }
    }
  }
}
