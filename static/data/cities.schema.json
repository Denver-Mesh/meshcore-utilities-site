{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$comment": "https://github.com/nwithan8/unraid_templates",
  "title": "Stations Data Schema",
  "additionalProperties": true,
  "definitions": {
    "emptyString": {
      "id": "#/definitions/emptyString",
      "type": "string",
      "pattern": "^$"
    },
    "nullableString": {
      "id": "#/definitions/nullableString",
      "oneOf": [
        {
          "type": "string",
          "minLength": 1
        },
        {
          "$ref": "#/definitions/emptyString"
        },
        {
          "type": "null"
        }
      ]
    },
    "cityName": {
      "id": "#/definitions/cityName",
      "type": "string",
      "minLength": 1
    },
    "cityCode": {
      "id": "#/definitions/cityCode",
      "type": "string",
      "minLength": 0,
      "maxLength": 7
    },
    "city": {
      "id": "#/definitions/city",
      "type": "object",
      "properties": {
        "name": {
          "$ref": "#/definitions/cityName"
        },
        "code": {
          "$ref": "#/definitions/cityCode"
        }
      },
      "required": [
        "name",
        "code"
      ]
    }
  },
  "description": "A list of cities",
  "type": "array",
  "items": {
    "$ref": "#/definitions/city"
  }
}
